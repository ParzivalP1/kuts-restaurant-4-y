generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOWBASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    email String  @unique
    hash  String
    hashedRt String?

    booking Booking?

    firstName String?
    lastName  String?

    @@map("users")
}
model Booking {
    id Int @id @default(autoincrement())

    visitorId Int @unique

    visitor User @relation(fields:[visitorId], references:[id])
    table Int
    time String

    @@map("books")
}